<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewInicioSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/ic_menu_my_calendar"
        android:gravity="center_vertical"
        android:text="@string/inicioSesion" />

    <TextView
        android:id="@+id/textViewMisReservas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/ic_menu_agenda"
        android:gravity="center_vertical"
        android:text="@string/misReservas" />

    <TextView
        android:id="@+id/textViewBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:gravity="center_vertical"
        android:text="@string/buscar" />

    <TextView
        android:id="@+id/textViewCercaDeMi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/ic_menu_myplaces"
        android:gravity="center_vertical"
        android:text="@string/cercaDeMi" />

    <TextView
        android:id="@+id/textViewAboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:gravity="center_vertical"
        android:text="@string/aboutUs" />

</LinearLayout>